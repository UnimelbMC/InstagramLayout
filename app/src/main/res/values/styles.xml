<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Login screen -->
    <style name="login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Navigation bar -->
    <style name="navbar_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Profile -->
    <style name="profile_stat_tag">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="profile_stat_number" parent="profile_stat_tag">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Post icon list -->
    <style name="post_icon_list">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
