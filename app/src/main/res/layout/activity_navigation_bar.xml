<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.example.junjen.mobileinstagram.NavigationBar">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/nav_bar_height"
        tools:context="co.example.junjen.mobileinstagram.NavigationBar">
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_alignParentBottom="true"
        tools:context="co.example.junjen.mobileinstagram.NavigationBar">

        <RadioGroup
            android:id="@+id/nav_bar"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#000000"
            >
            <RadioButton
                android:id="@+id/userfeed_button"
                style="@style/navbar_button"
                android:drawableTop="@drawable/userfeed_selector"
                android:text="User Feed" />
            <RadioButton
                android:id="@+id/discover_button"
                style="@style/navbar_button"
                android:drawableTop="@drawable/discover_selector"
                android:text="Discover"
                android:layout_marginLeft="5dp"
                />
            <RadioButton
                android:id="@+id/camera_button"
                style="@style/navbar_button"
                android:drawableTop="@drawable/camera_selector"
                android:text="Camera"
                android:layout_marginLeft="@dimen/nav_button_margin"
                />
            <RadioButton
                android:id="@+id/activityfeed_button"
                style="@style/navbar_button"
                android:drawableTop="@drawable/activityfeed_selector"
                android:text="Activity Feed"
                android:layout_marginLeft="@dimen/nav_button_margin"
                />
            <RadioButton
                android:id="@+id/profile_button"
                style="@style/navbar_button"
                android:drawableTop="@drawable/profile_selector"
                android:text="Profile"
                android:layout_marginLeft="@dimen/nav_button_margin"
                />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>
