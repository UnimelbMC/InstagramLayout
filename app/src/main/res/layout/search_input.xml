<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/main_background"
    tools:context=".SearchFragment">

    <!--  Search button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comment_button_height"
        android:text="Search"
        android:id="@+id/search_user_button"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <!-- Field to search user -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_user_text"
        android:layout_toLeftOf="@id/search_user_button"
        android:hint="@string/search_hint"
        android:background="@color/white"
        android:singleLine="true"
        android:layout_margin="@dimen/comment_total_margin"/>

</RelativeLayout>