<co.example.junjen.mobileinstagram.customLayouts.ExpandableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_bar_height"
    tools:context="co.example.junjen.mobileinstagram.ActivityYouFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_you_header_text"
            android:layout_margin="@dimen/comment_total_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_you_scroll_view"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>

</co.example.junjen.mobileinstagram.customLayouts.ExpandableScrollView>
