<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/swipe_header"
        android:layout_height="wrap_content"
        android:text="@string/swipe_to_send_header"
        android:layout_margin="@dimen/comment_total_margin"/>

    <View
        android:id="@+id/swipe_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/swipe_header"
        android:layout_marginBottom="@dimen/post_margin"/>

    <HorizontalScrollView
        android:id="@+id/swipe_scroll_view"
        android:layout_below="@id/swipe_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/post_margin"
        android:layout_marginRight="@dimen/post_margin"/>

</RelativeLayout>